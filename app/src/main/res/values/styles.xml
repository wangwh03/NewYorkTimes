<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="card_view">
    <item name="android:background">@color/grey_light</item>
    <item name="android:foreground">?attr/selectableItemBackground</item>
    <item name="android:layout_marginTop">@dimen/card_top</item>
    <item name="android:layout_marginBottom">@dimen/card_bottom</item>
    <item name="android:layout_marginLeft">@dimen/card_side</item>
    <item name="android:layout_marginRight">@dimen/card_side</item>
    <item name="cardCornerRadius">@dimen/card_radius</item>
    <item name="cardElevation">@dimen/card_elevation</item>
  </style>

  <style name="headline">
    <item name="android:textColor">@color/grey_dark</item>
    <item name="android:textStyle">bold</item>
    <item name="android:fontFamily">Times</item>
  </style>

  <style name="date">
    <item name="android:textColor">@color/grey_light</item>
    <item name="android:textSize">10dp</item>
  </style>
</resources>
